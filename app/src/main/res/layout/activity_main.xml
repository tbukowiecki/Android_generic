<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".MainActivity">

        <Switch
            android:id="@+id/environment"
            android:textOn="PRODUCTION"
            android:textOff="SANDBOX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/shop_my_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OPEN MY STORE" />

        <Button
            android:id="@+id/shop_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OPEN STORE" />

        <Button
            android:id="@+id/shop_panda_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OPEN PANDA STORE" />

        <Button
            android:id="@+id/shop_bestseller_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OPEN BESTSELLER STORE" />

        <Button
            android:id="@+id/shop_new_this_week_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OPEN NEW THIS WEEK STORE" />

        <Button
            android:id="@+id/shop_geek_and_nerd_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OPEN GEEK AND NERD STORE" />

        <Button
            android:id="@+id/shop_movies_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OPEN MOVIES STORE" />

        <Button
            android:id="@+id/shop_text_based_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OPEN TEXT BASED STORE" />

        <Button
            android:id="@+id/shop_pop_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OPEN POP STORE" />

        <Button
            android:id="@+id/shop_sale_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OPEN SALE STORE" />

        <Button
            android:id="@+id/shop_zombies_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OPEN ZOMBIES STORE" />

        <Button
            android:id="@+id/shop_tv_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OPEN TV STORE" />

        <Button
            android:id="@+id/shop_graphic_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OPEN GRAPHIC STORE" />

        <Button
            android:id="@+id/shop_animals_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OPEN ANIMALS STORE" />

        <Button
            android:id="@+id/shop_games_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OPEN GAMES STORE" />

        <Button
            android:id="@+id/shop_bacon_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OPEN BACON STORE" />

        <Button
            android:id="@+id/shop_math_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OPEN MATH AND SCIENCE STORE" />

    </LinearLayout>
</ScrollView>